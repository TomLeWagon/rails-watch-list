<%# <div class="position-relative overflow-hidden p-3 p-md-5 m-md-3 text-center bg-light"> %>
  <div class="home-banner" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('https://images.unsplash.com/photo-1489599849927-2ee91cede3ba?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1740&q=80');">
    <h1 class="display-1"> Tom's Movie List </h1>
  </div>

<div class="container">
<%= link_to "New List", new_list_path, class: "btn btn-primary my-2"%>
  <ul class="list-group">
    <% @lists.each do |list| %>
      <li class="list-group-item" >
        <div class="cardshow" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= cl_image_path list.photo.key %>)">
          <h3><%= list.name %></h3>
        </div>
      <%= link_to "See details", list_path(list), class: "btn btn-primary my-2"%>
      </li>
    <% end %>
  </ul>
</div>
